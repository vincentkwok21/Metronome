int beatTime = 100;
int buzzer = 3;
void setup() {
  Serial.begin(9600);
  pinMode(buzzer, OUTPUT);
}

void loop() {
  // put your main code here, to run repeatedly:
  int bpm = (analogRead(A0)/5) + 10;
  long delays = (60000/bpm) - beatTime;
  Serial.println(bpm);
  tone(buzzer, 500);
  delay(beatTime);
  noTone(buzzer);
  delay(delays);
}
